<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="4.0"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:javaee="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xml="http://www.w3.org/XML/1998/namespace"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- JSP Mapping -->
  
  <servlet>
  	<servlet-name>header</servlet-name>
  	<jsp-file>/views/module/header.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>header</servlet-name>
	<url-pattern>/header</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>footer</servlet-name>
  	<jsp-file>/views/module/footer.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>footer</servlet-name>
	<url-pattern>/footer</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>error</servlet-name>
  	<jsp-file>/views/module/error.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>error</servlet-name>
	<url-pattern>/error</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>rank</servlet-name>
  	<jsp-file>/views/module/rank.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>rank</servlet-name>
	<url-pattern>/rank</url-pattern>  
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>notice</servlet-name>
  	<jsp-file>/views/module/notice.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>notice</servlet-name>
	<url-pattern>/noticelist</url-pattern>	
  </servlet-mapping>
  
  <servlet>  
  	<servlet-name>managementForm</servlet-name>
  	<jsp-file>/views/admin/managementForm.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>managementForm</servlet-name>
	<url-pattern>/manager</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>userManagement</servlet-name>
  	<jsp-file>/views/admin/userManagement.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>userManagement</servlet-name>
	<url-pattern>/user</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>quizManagement</servlet-name>
  	<jsp-file>/views/admin/quizManagement.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>quizManagement</servlet-name>
	<url-pattern>/quizzes</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>noticeManagement</servlet-name>
  	<jsp-file>/views/admin/noticeManagement.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>noticeManagement</servlet-name>
	<url-pattern>/list</url-pattern>  
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>noticeWrite</servlet-name>
  	<jsp-file>/views/admin/noticeWriteForm.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>noticeWrite</servlet-name>
	<url-pattern>/notice</url-pattern>  
  </servlet-mapping>
  
  <!-- Servlet Mapping -->
  
  <servlet>
  	<servlet-name>write</servlet-name>
  	<servlet-class>notice.controller.WriteFormAction</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>write</servlet-name>
	<url-pattern>/notice/write</url-pattern>  
  </servlet-mapping>
    
  <error-page>
  	<error-code>404</error-code>
  	<location>/error</location>
  </error-page>
  
</web-app>